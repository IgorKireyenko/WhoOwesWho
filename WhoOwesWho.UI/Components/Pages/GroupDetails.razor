@page "/group/{id:guid}"
@attribute [Authorize]
@rendermode InteractiveServer
@using WhoOwesWho.Common.Groups.Dto
@using WhoOwesWho.UI.Components.Shared
@using WhoOwesWho.UI.Groups
@inject IGroupsApiClient GroupsApiClient
@inject NavigationManager NavigationManager

<PageTitle>@(groupDetails?.Title ?? "Group Details")</PageTitle>

<div class="group-details-page">
    @if (isLoading)
    {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Error</h4>
            <p>@errorMessage</p>
            <hr />
            <div class="d-flex gap-2">
                <button class="btn btn-outline-danger" @onclick="LoadGroupDetailsAsync">Try Again</button>
                <button class="btn btn-secondary" @onclick="NavigateToGroups">Back to Groups</button>
            </div>
        </div>
    }
    else if (groupDetails is not null)
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>@groupDetails.Title</h1>
            <button class="btn btn-outline-secondary" @onclick="NavigateToGroups">
                <i class="bi bi-arrow-left"></i> Back to Groups
            </button>
        </div>

        <MembersList Members="groupDetails.Members" OnAddMember="NavigateToAddMember" />
        <PaymentsList Payments="groupDetails.Payments" OnAddPayment="NavigateToAddPayment" />
    }
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private GroupDetailsResponseDto? groupDetails;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadGroupDetailsAsync();
    }

    private async Task LoadGroupDetailsAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            groupDetails = await GroupsApiClient.GetGroupDetailsAsync(Id, CancellationToken.None);
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = ex.Message;
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
        }
        catch (Exception)
        {
            errorMessage = "An unexpected error occurred while loading group details. Please try again later.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToGroups()
    {
        NavigationManager.NavigateTo("/groups");
    }

    private void NavigateToAddMember()
    {
        NavigationManager.NavigateTo($"/group/{Id}/members/new");
    }

    private void NavigateToAddPayment()
    {
        NavigationManager.NavigateTo($"/group/{Id}/payments/new");
    }
}

