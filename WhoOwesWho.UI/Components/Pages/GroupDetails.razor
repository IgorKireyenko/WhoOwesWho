@page "/group/{id:guid}"
@attribute [Authorize]
@rendermode InteractiveServer
@using WhoOwesWho.Common.Groups.Dto
@using WhoOwesWho.UI.Components.Shared
@using WhoOwesWho.UI.Groups
@inject IGroupsApiClient GroupsApiClient
@inject NavigationManager NavigationManager

<PageTitle>@(groupDetails?.Title ?? "Group Details")</PageTitle>

<div class="group-details-page">
    @if (isLoading)
    {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Error</h4>
            <p>@errorMessage</p>
            <hr />
            <div class="d-flex gap-2">
                <button class="btn btn-outline-danger" @onclick="LoadGroupDetailsAsync">Try Again</button>
                <button class="btn btn-secondary" @onclick="NavigateToGroups">Back to Groups</button>
            </div>
        </div>
    }
    else if (groupDetails is not null)
    {
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-stretch align-items-md-center gap-3 mb-4">
            <h1>@groupDetails.Title</h1>
            <div class="d-flex flex-column flex-md-row gap-2">
                <button class="btn btn-outline-secondary" @onclick="NavigateToGroups">
                    <i class="bi bi-arrow-left"></i> Back to Groups
                </button>
                <button class="btn btn-danger" @onclick="ShowRemoveGroupModal">
                    <i class="bi bi-trash"></i> Remove Group
                </button>
            </div>
        </div>

        <MembersList Members="groupDetails.Members" 
                     OnAddMember="NavigateToAddMember" 
                     OnRemoveMember="HandleRemoveMemberAsync" />
        <DebtsList Debts="debts" />
        <PaymentsList Payments="groupDetails.Payments" 
                      OnAddPayment="NavigateToAddPayment" 
                      OnRemovePayment="HandleRemovePaymentAsync" />
    }
</div>

<ConfirmationModal @ref="removeGroupModal"
                   Title="Remove Group"
                   Message="Are you really sure you want to remove this group?"
                   OnConfirm="HandleRemoveGroupAsync" />

@code {
[Parameter]
public Guid Id { get; set; }

private GroupDetailsResponseDto? groupDetails;
private List<DebtResponseDto> debts = [];
private bool isLoading = true;
private string? errorMessage;
private ConfirmationModal removeGroupModal = null!;

protected override async Task OnInitializedAsync()
{
    await LoadGroupDetailsAsync();
}

private async Task LoadGroupDetailsAsync()
{
    isLoading = true;
    errorMessage = null;

    try
    {
        groupDetails = await GroupsApiClient.GetGroupDetailsAsync(Id, CancellationToken.None);
        debts = await GroupsApiClient.GetGroupDebtsAsync(Id, CancellationToken.None);
    }
    catch (UnauthorizedAccessException ex)
    {
        errorMessage = ex.Message;
    }
    catch (InvalidOperationException ex)
    {
        errorMessage = ex.Message;
    }
    catch (Exception)
    {
        errorMessage = "An unexpected error occurred while loading group details. Please try again later.";
    }
    finally
    {
        isLoading = false;
    }
}

    private void NavigateToGroups()
    {
        NavigationManager.NavigateTo("/groups");
    }

    private void NavigateToAddMember()
    {
        NavigationManager.NavigateTo($"/group/{Id}/members/new");
    }

    private void NavigateToAddPayment()
    {
        NavigationManager.NavigateTo($"/group/{Id}/payments/new");
    }

    private async Task HandleRemoveMemberAsync(Guid memberId)
    {
        await GroupsApiClient.RemoveMemberAsync(Id, memberId, CancellationToken.None);
        await LoadGroupDetailsAsync();
    }

    private async Task HandleRemovePaymentAsync(Guid paymentId)
    {
        await GroupsApiClient.RemovePaymentAsync(Id, paymentId, CancellationToken.None);
        await LoadGroupDetailsAsync();
    }

    private void ShowRemoveGroupModal()
    {
        removeGroupModal.Show();
    }

    private async Task HandleRemoveGroupAsync()
    {
        await GroupsApiClient.DeleteGroupAsync(Id, CancellationToken.None);
        NavigationManager.NavigateTo("/groups");
    }
}

