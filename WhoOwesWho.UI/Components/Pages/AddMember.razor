@page "/group/{groupId:guid}/members/new"
@attribute [Authorize]
@rendermode InteractiveServer
@using WhoOwesWho.Common.Groups.Dto
@using WhoOwesWho.UI.Groups
@inject IGroupsApiClient GroupsApiClient
@inject NavigationManager NavigationManager

<PageTitle>Add Member</PageTitle>

<div class="add-member-page">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Add Member</h1>
        <button class="btn btn-outline-secondary" @onclick="NavigateToGroupDetails">
            <i class="bi bi-arrow-left"></i> Back to Group Details
        </button>
    </div>

    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Error</h4>
            <p>@errorMessage</p>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <EditForm Model="@formModel" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label for="memberName" class="form-label">Member Name</label>
                    <InputText 
                        id="memberName" 
                        class="form-control" 
                        @bind-Value="formModel.Name" 
                        placeholder="Enter member name" 
                        maxlength="50" />
                    <ValidationMessage For="@(() => formModel.Name)" />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Adding...</span>
                        }
                        else
                        {
                            <span>Add</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Guid GroupId { get; set; }

    private AddMemberFormModel formModel = new();
    private bool isSubmitting = false;
    private string? errorMessage;

    private async Task HandleValidSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            var request = new AddMemberRequestDto(formModel.Name);
            await GroupsApiClient.AddMemberAsync(GroupId, request, CancellationToken.None);
            NavigationManager.NavigateTo($"/group/{GroupId}");
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = ex.Message;
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
        }
        catch (Exception)
        {
            errorMessage = "An unexpected error occurred while adding the member. Please try again later.";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void NavigateToGroupDetails()
    {
        NavigationManager.NavigateTo($"/group/{GroupId}");
    }

    private class AddMemberFormModel
    {
        [Required(ErrorMessage = "Member name is required.")]
        [StringLength(50, MinimumLength = 1, ErrorMessage = "Member name must be between 1 and 50 characters.")]
        public string Name { get; set; } = string.Empty;
    }
}
