@page "/signup"
@layout Layout.AuthLayout

@using WhoOwesWho.Common.Auth.Dto
@using WhoOwesWho.UI.Auth
@inject IAuthApiClient AuthApi
@inject NavigationManager Navigation

<PageTitle>Sign up</PageTitle>

<div class="card shadow-sm wow-auth-card">
    <div class="card-body p-4">
        <h1 class="h4 mb-3">Create account</h1>
        <p class="text-body-secondary mb-4">Join to start tracking shared expenses.</p>

        @if (!string.IsNullOrWhiteSpace(ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ErrorMessage
            </div>
        }

        <EditForm Model="Model" OnValidSubmit="HandleValidSubmit" FormName="signup">
            <DataAnnotationsValidator />
            <ValidationSummary class="mb-3" />

            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <InputText id="email" class="form-control" @bind-Value="Model.Email" autocomplete="email" inputmode="email" />
                <ValidationMessage For="() => Model.Email" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="Model.Password" autocomplete="new-password" />
                <div class="form-text">Minimum 8 characters.</div>
                <ValidationMessage For="() => Model.Password" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="confirmPassword">Confirm password</label>
                <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="Model.ConfirmPassword" autocomplete="new-password" />
                <ValidationMessage For="() => Model.ConfirmPassword" />
            </div>

            <button type="submit" class="btn btn-primary w-100 wow-auth-btn">Create account</button>
        </EditForm>

        <hr class="my-4" />

        <div class="d-flex flex-column flex-sm-row justify-content-between gap-2">
            <a class="wow-auth-link" href="/login">Already have an account? Log in</a>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    public SignupModel Model { get; set; } = new();

    private string? ErrorMessage { get; set; }

    private async Task HandleValidSubmit()
    {
        ErrorMessage = null;

        try
        {
            await AuthApi.SignUpAsync(
                new SignUpRequestDto(Model.Email, Model.Password),
                CancellationToken.None);

            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;
        }
    }

    public sealed class SignupModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        [MinLength(8)]
        public string Password { get; set; } = string.Empty;

        [Required]
        [Compare(nameof(Password), ErrorMessage = "Passwords do not match.")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
