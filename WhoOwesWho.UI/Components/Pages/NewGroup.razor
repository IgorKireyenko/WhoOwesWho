@page "/groups/new"
@attribute [Authorize]
@rendermode InteractiveServer
@using WhoOwesWho.Common.Groups.Dto
@using WhoOwesWho.UI.Groups
@inject IGroupsApiClient GroupsApiClient
@inject NavigationManager NavigationManager

<PageTitle>Create New Group</PageTitle>

<div class="new-group-page">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Create New Group</h1>
        <button class="btn btn-outline-secondary" @onclick="NavigateToGroups">
            <i class="bi bi-arrow-left"></i> Back to Groups
        </button>
    </div>

    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Error</h4>
            <p>@errorMessage</p>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <EditForm Model="@formModel" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label for="groupName" class="form-label">Group Name</label>
                    <InputText 
                        id="groupName" 
                        class="form-control" 
                        @bind-Value="formModel.Title" 
                        placeholder="Enter group name" 
                        maxlength="20" />
                    <ValidationMessage For="@(() => formModel.Title)" />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Creating...</span>
                        }
                        else
                        {
                            <span>Create</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private CreateGroupFormModel formModel = new();
    private bool isSubmitting = false;
    private string? errorMessage;

    private async Task HandleValidSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            var request = new CreateGroupRequestDto(formModel.Title);
            var response = await GroupsApiClient.CreateGroupAsync(request, CancellationToken.None);
            NavigationManager.NavigateTo($"/group/{response.GroupId}");
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = ex.Message;
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
        }
        catch (Exception)
        {
            errorMessage = "An unexpected error occurred while creating the group. Please try again later.";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void NavigateToGroups()
    {
        NavigationManager.NavigateTo("/groups");
    }

    private class CreateGroupFormModel
    {
        [Required(ErrorMessage = "Group name is required.")]
        [StringLength(20, MinimumLength = 1, ErrorMessage = "Group name must be between 1 and 20 characters.")]
        public string Title { get; set; } = string.Empty;
    }
}
