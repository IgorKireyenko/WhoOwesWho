@using WhoOwesWho.Common.Groups.Dto

<div class="group-card">
    <h5 class="group-card-title">@Group.Title</h5>
    <div class="group-card-info">
        <span class="badge bg-secondary me-2">@Group.MemberCount member@(Group.MemberCount != 1 ? "s" : "")</span>
        <span class="badge bg-secondary">@Group.PaymentCount payment@(Group.PaymentCount != 1 ? "s" : "")</span>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public required GroupSummaryDto Group { get; set; }
}
