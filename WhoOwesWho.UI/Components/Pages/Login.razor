@page "/login"
@layout Layout.AuthLayout

@using WhoOwesWho.Common.Auth.Dto
@using WhoOwesWho.UI.Auth
@inject IAuthApiClient AuthApi
@inject ICookieAuthenticationService CookieAuth
@inject NavigationManager Navigation

<PageTitle>Login</PageTitle>

<div class="card shadow-sm wow-auth-card">
    <div class="card-body p-4">
        <h1 class="h4 mb-3">Login</h1>
        <p class="text-body-secondary mb-4">Welcome back. Please sign in to continue.</p>

        @if (!string.IsNullOrWhiteSpace(ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ErrorMessage
            </div>
        }

        <EditForm Model="Model" OnValidSubmit="HandleValidSubmit" FormName="login">
            <DataAnnotationsValidator />
            <ValidationSummary class="mb-3" />

            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <InputText id="email" class="form-control" @bind-Value="Model.Email" autocomplete="email" inputmode="email" />
                <ValidationMessage For="() => Model.Email" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="Model.Password" autocomplete="current-password" />
                <ValidationMessage For="() => Model.Password" />
            </div>

            <button type="submit" class="btn btn-primary w-100 wow-auth-btn">Log in</button>
        </EditForm>

        <hr class="my-4" />

        <div class="d-flex flex-column flex-sm-row justify-content-between gap-2">
            <a class="wow-auth-link" href="/signup">Don't have an account? Sign up</a>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    public LoginModel Model { get; set; } = new();

    private string? ErrorMessage { get; set; }

    private async Task HandleValidSubmit()
    {
        ErrorMessage = null;

        try
        {
            var loginResponse = await AuthApi.LoginAsync(
                new LoginRequestDto(Model.Email, Model.Password),
                CancellationToken.None);

            await CookieAuth.SignInAsync(loginResponse);

            Navigation.NavigateTo("/", forceLoad: true);
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;
        }
    }

    public sealed class LoginModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        [MinLength(8)]
        public string Password { get; set; } = string.Empty;
    }
}
